{
  "name": "collaborative-document-service",
  "version": "0.1.0",
  "description": "Backend microservice, supporting real-time multi-user collaboration on a shared document.",
  "author": "Alkemio Foundation",
  "license": "EUPL-1.2",
  "main": "dist/main.js",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "node --run build:clean && nest build --path tsconfig.prod.json",
    "build:clean": "rimraf dist; exit 0",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "lint": "eslint . --ext .ts,.mts",
    "typos": "typos",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "start:dev": "nest start --watch",
    "test": "vitest run --config test/config/vitest.config.ts",
    "test:ui": "vitest --ui --config test/config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config test/config/vitest.config.ts && open-cli coverage/index.html"
  },
  "keywords": [
    "collaboration",
    "hocuspocus",
    "ws"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkem-io/collaborative-document-service.git"
  },
  "bugs": {
    "url": "https://github.com/alkem-io/collaborative-document-service/issues"
  },
  "homepage": "https://github.com/alkem-io/collaborative-document-service#readme",
  "dependencies": {
    "@hocuspocus/server": "^3.2.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.9",
    "logform": "^2.7.0",
    "nest-winston": "^1.10.2",
    "rxjs": "^7.8.2",
    "winston": "^3.17.0",
    "yaml": "^2.8.1",
    "yjs": "^13.6.27"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "22.17.0",
    "pnpm": "10.14.0"
  },
  "devDependencies": {
    "@commitlint/types": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/node": "^22.18.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.4.0",
    "open-cli": "^8.0.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "unplugin-swc": "^1.5.1",
    "vite": "5.4.20",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^1.3.2"
  }
}
