{
  "name": "collaborative-document-service",
  "version": "0.0.1",
  "description": "Backend microservice, supporting real-time multi-user collaboration on a shared document.",
  "author": "Alkemio Foundation",
  "license": "EUPL-1.2",
  "main": "dist/main.js",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "node --run build:clean && nest build --path tsconfig.prod.json",
    "build:clean": "rimraf dist; exit 0",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "lint": "eslint . --ext .ts,.mts",
    "typos": "typos",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "start:dev": "nest start --watch",
    "test": "vitest run --config test/config/vitest.config.ts"
  },
  "keywords": [
    "collaboration",
    "hocuspocus",
    "ws"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkem-io/collaborative-document-service.git"
  },
  "bugs": {
    "url": "https://github.com/alkem-io/collaborative-document-service/issues"
  },
  "homepage": "https://github.com/alkem-io/collaborative-document-service#readme",
  "dependencies": {
    "@hocuspocus/server": "^3.1.12",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-fastify": "^11.1.3",
    "logform": "^2.7.0",
    "nest-winston": "^1.10.2",
    "rxjs": "^7.8.2",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "yjs": "^13.6.27"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "22.17.0",
    "pnpm": "10.13.1"
  },
  "devDependencies": {
    "@commitlint/types": "^19.8.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.7.42",
    "@types/node": "^22.16.2",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^1.3.1"
  }
}
